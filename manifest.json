{
    "manifest_version": 2,
    "name": "Lazy Tab Manager",
    "short_name": "ltm",
    "version": "1.0.0",
    "description": "雑にタブを管理します",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}